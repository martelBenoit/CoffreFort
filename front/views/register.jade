extends layout

block content
	h1 Register form
	form(
	action='register'
	method='POST'
	)
		input(
		type='text'
		name='login'
		placeholder='login'
		required
		)
		input(
		type='password'
		name='password'
		placeholder='password'
		required
		)
		input(
		type='submit'
		)

	a(href="/") Vous avez déjà un compte ? Connectez vous !